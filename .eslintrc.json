{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb", "airbnb/hooks", "airbnb-typescript", "plugin:prettier/recommended", "plugin:@react-three/recommended"],
  "ignorePatterns": ["dist", ".eslintrc.cjs"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": ["tsconfig.json"],
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react", "@typescript-eslint", "@react-three"],
  "rules": {
    "@react-three/no-clone-in-loop": "error",
    "@react-three/no-new-in-loop": "error",
    "no-console": [
      "warn",
      {
        "allow": ["off", "error", "warn"]
      }
    ],
    "@typescript-eslint/naming-convention": "off",
    "@typescript-eslint/comma-dangle": "off",
    "@typescript-eslint/no-unused-vars": "warn",
    // Vite
    "@typescript-eslint/no-use-before-define": "warn",
    // Vite
    "@typescript-eslint/no-unused-expressions": "warn",
    "arrow-body-style": "off",
    "class-methods-use-this": "off",
    "default-case": "warn",
    "guard-for-in": "off",
    "import/no-extraneous-dependencies": "off",
    "import/prefer-default-export": "off",
    // Vite
    "jsx-a11y/anchor-is-valid": "warn",
    "linebreak-style": ["error", "unix"],
    // Vite
    "no-empty-pattern": "warn",
    "no-plusplus": "off",
    "no-prototype-builtins": "off",
    "jsx-a11y/control-has-associated-label": "warn",
    "no-param-reassign": [
      2,
      {
        "props": false
      }
    ],
    // Vite
    "no-restricted-globals": "warn",
    // Vite
    "no-restricted-syntax": "warn",
    "no-underscore-dangle": "off",
    "react/jsx-props-no-spreading": "off",
    "react/no-array-index-key": "warn",
    "react/require-default-props": "off",
    "react/function-component-definition": [
      "error",
      {
        "namedComponents": "arrow-function",
        "unnamedComponents": "arrow-function"
      }
    ],
    "react/jsx-curly-brace-presence": "warn",
    "react/react-in-jsx-scope": 0,
    "react/prop-types": 0,
    "react-hooks/exhaustive-deps": "warn",
    "react/no-unknown-property": [
      "warn",
      {
        "ignore": ["css", "args", "position", "intensity", "rotation", "object", "angle", "penumbra", "castShadow"]
      }
    ]
  },
    "overrides": [
    {
      "files": ["*.tsx", "*.jsx"],
      "rules": {
        "react/no-is-mounted": "error"
      }
    },
    {
      "files": ["*.ts", "*.js"],
      "rules": {
        "react/no-is-mounted": "off"
      }
    }
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
